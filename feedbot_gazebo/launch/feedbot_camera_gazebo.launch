<launch>
    <param name="camera_description" command="$(find xacro)/xacro --inorder '$(find feedbot_gazebo)/models/realsense_camera/urdf/feedbot_camera.urdf.xacro'" />
    <param name="camera_holder_description" command="$(find xacro)/xacro --inorder '$(find feedbot_gazebo)/models/realsense_camera/urdf/camera_holder.urdf.xacro'" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="verbose" value="true"/>
    </include>

    <node name="camera_state_publisher" pkg="robot_state_publisher" type="state_publisher">
        <remap from="robot_description" to="camera_description" />
        <remap from="joint_states" to="feedbot_camera" />
    </node>
    
    <!-- this should be loaded from a file -->
    <arg name="x_camera" default="0.436"/>
    <arg name="y_camera" default="-0.260"/>
    <arg name="z_camera" default="0.118"/>
    <arg name="roll_camera" default="-0.021"/>
    <arg name="pitch_camera" default="-0.366"/>
    <arg name="yaw_camera" default="1.635"/>
    <node name="camera_spawn" pkg="gazebo_ros" type="spawn_model" args="-urdf -param camera_description -model feedbot_camera
                                                                        -x $(arg x_camera) -y $(arg y_camera) -z $(arg z_camera)
                                                                        -R $(arg roll_camera) -P $(arg pitch_camera) -Y $(arg yaw_camera)"/>
    <node name="camera_holder_spawn" pkg="gazebo_ros" type="spawn_model" args="-urdf -param camera_holder_description -model feedbot_camera_holder
                                                                        -x $(arg x_camera) -y $(arg y_camera)"/>
    <node name="rviz" pkg="rviz" type="rviz" />

</launch>
